= form_for @word do |f|
  - if @word.errors.any?
    #error_explanation
      %h2= "#{pluralize(@word.errors.count, "error")} prohibited this word from being saved:"
      %ul
        - @word.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :original
    = f.text_field :original
  .field
    = f.label :translit
    = f.text_field :translit
  .actions
    = f.submit 'Save', class: 'button'
